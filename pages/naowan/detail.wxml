<view><text>{{title}}</text></view>

<view class="toolbar">
    <view class="inner">
        <view class="item" bindtap="bindModalShare"><image src="../../resources/images/32x32/share.png" /></view>
        <view class="item" bindtap="bindRefresh"><image src="../../resources/images/32x32/refresh.png" /></view>
        <view class="item"><image src="../../resources/images/32x32/favorite.png" /></view>
        <view class="item"><image src="../../resources/images/32x32/insert_comment.png" />
            <view class="tip"></view>
        </view>
        <view class="item"><image src="../../resources/images/32x32/thumb_up.png" /></view>
    </view>
</view>

<modal class="modal" confirm-text="取消" no-cancel hidden="{{modalHidden}}" bindconfirm="bindModalHide">
    <view class="share-list">
        <view class="item"><image src="../../resources/images/64x64/share_qq.png" /></view>
        <view class="item"><image src="../../resources/images/64x64/share_pengyouquan.png" /></view>
        <view class="item"><image src="../../resources/images/64x64/share_qzone.png" /></view>
    </view>
    <view class="share-list" style="margin-top: 20rpx">
        <view class="item"><image src="../../resources/images/64x64/share_weibo.png" /></view>
        <view class="item"><image src="../../resources/images/64x64/share_alipay.png" /></view>
        <view class="item"><image src="../../resources/images/64x64/share_plus.png" /></view>
    </view>
</modal>